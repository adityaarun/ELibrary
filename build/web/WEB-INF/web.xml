<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInfo</servlet-name>
        <servlet-class>servlets.UpdateInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookUploadServlet</servlet-name>
        <servlet-class>servlets.BookUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveBook</servlet-name>
        <servlet-class>servlets.RemoveBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminGrant</servlet-name>
        <servlet-class>servlets.AdminGrant</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Rate</servlet-name>
        <servlet-class>servlets.Rate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCat</servlet-name>
        <servlet-class>servlets.AddCat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CatRemServlet</servlet-name>
        <servlet-class>servlets.CatRemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCat</servlet-name>
        <servlet-class>servlets.UpdateCat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeCategory</servlet-name>
        <servlet-class>servlets.ChangeCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Special</servlet-name>
        <servlet-class>servlets.Special</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateInfo</servlet-name>
        <url-pattern>/UpdateInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookUploadServlet</servlet-name>
        <url-pattern>/BookUploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveBook</servlet-name>
        <url-pattern>/RemoveBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminGrant</servlet-name>
        <url-pattern>/AdminGrant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Rate</servlet-name>
        <url-pattern>/Rate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCat</servlet-name>
        <url-pattern>/AddCat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CatRemServlet</servlet-name>
        <url-pattern>/CatRemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCat</servlet-name>
        <url-pattern>/UpdateCat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeCategory</servlet-name>
        <url-pattern>/ChangeCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Special</servlet-name>
        <url-pattern>/Special</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
